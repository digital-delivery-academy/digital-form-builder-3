{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach debugger to Runner (9228)",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch and debug Designer",
            "cwd": "${workspaceFolder}/designer",
            "program": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
            "args": [
                "--inspect=9227",
                "--respawn",
                "--no-notify",
                "--transpile-only",
                "./server/index.ts"
            ],
            "env": {
                "NODE_ENV": "development",
                "PERSISTENT_BACKEND": "preview"
            },
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "port": 9227
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch and debug Runner",
            "cwd": "${workspaceFolder}/runner",
            "program": "${workspaceRoot}/node_modules/.bin/nodemon",
            "args": [
                "--inspect=9228",
                "dist/index.js"
            ],
            "env": {
                "NODE_ENV": "development",
                "PREVIEW_MODE": "true"
            },
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "port": 9227
        }
    ]
}